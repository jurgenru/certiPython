   "cell_type": "code",
   "execution_count": 99,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "Introduce el limite del triangulo: 20\n",
      "[19, 17, 13, 11, 7, 5, 3, 2]\n",
      "2\n",
      "[19, 17, 13, 11, 7, 5, 3, 2]\n",
      "3\n",
      "[19, 17, 13, 11, 7, 5, 3, 2]\n",
      "5\n",
      "[19, 17, 13, 11, 7, 5, 3, 2]\n",
      "7\n",
      "[19, 17, 13, 11, 7, 5, 3, 2]\n",
      "11\n",
      "[19, 17, 13, 11, 7, 5, 3, 2]\n",
      "13\n",
      "[19, 17, 13, 11, 7, 5, 3, 2]\n",
      "17\n",
      "[19, 17, 13, 11, 7, 5, 3, 2]\n",
      "19\n"
     ]
    }
   ],
   "source": [
    "lim=int(input(\"Introduce el limite del triangulo: \"))\n",
    "listaprimos=[2]\n",
    "for x in range(3,lim):\n",
    "    for i in range(2,x):\n",
    "        if x % i != 0:\n",
    "            continue\n",
    "        else:\n",
    "            break\n",
    "    else:\n",
    "        listaprimos.append(x)\n",
    "listaprimos.reverse()\n",
    "\n",
    "for e,i in enumerate(listaprimos): \n",
    "    print(listaprimos[len(listaprimos)-1-e])"
   ]
